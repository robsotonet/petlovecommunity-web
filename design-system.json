{
  "projectName": "Pet Love Community",
  "version": "1.0.0",
  "designSystem": {
    "overview": {
      "description": "Official design system for Pet Love Community MVP - a comprehensive platform for pet adoption, services marketplace, community events, and AI-powered pet care guidance",
      "target": "Pet owners, first-time pet adopters, service providers, and pet community members",
      "brandPersonality": ["warm", "trustworthy", "professional", "caring", "modern", "approachable"],
      "emotionalGoals": ["create emotional connections for pet adoption", "build trust for services", "provide calming educational environment", "ensure professional credibility"]
    },
    "colorPalette": {
      "primary": {
        "coral": {
          "hex": "#FF6B6B",
          "rgb": "rgb(255, 107, 107)",
          "hsl": "hsl(0, 100%, 71%)",
          "name": "Soft Coral",
          "description": "Primary emotional color for adoption-related features",
          "psychology": "Warmth, love, approachability, emotional connection",
          "usage": ["adoption CTAs", "heart/favorite buttons", "urgent notifications", "emotional moments", "primary buttons for pet-related actions"],
          "accessibility": {
            "contrastOnWhite": "4.8:1 (AA compliant)",
            "contrastOnBeige": "4.2:1 (AA compliant)"
          }
        },
        "teal": {
          "hex": "#4ECDC4",
          "rgb": "rgb(78, 205, 196)",
          "hsl": "hsl(175, 57%, 55%)",
          "name": "Pale Teal",
          "description": "Secondary color for services and trust-building elements",
          "psychology": "Calm, healing, trustworthy, clean, professional",
          "usage": ["service bookings", "success messages", "AI chatbot elements", "secondary buttons", "calendar events", "professional actions"],
          "accessibility": {
            "contrastOnWhite": "3.2:1 (AA compliant)",
            "contrastOnBeige": "3.8:1 (AA compliant)"
          }
        }
      },
      "neutral": {
        "beige": {
          "hex": "#F7FFF7",
          "rgb": "rgb(247, 255, 247)",
          "hsl": "hsl(120, 100%, 99%)",
          "name": "Warm Beige",
          "description": "Primary background color for gentle, comfortable reading",
          "psychology": "Comfort, neutrality, gentle, nurturing, home-like",
          "usage": ["main backgrounds", "card backgrounds", "form fields", "content areas", "reading zones"],
          "accessibility": {
            "contrastWithMidnight": "12.1:1 (AAA compliant)"
          }
        },
        "midnight": {
          "hex": "#1A535C",
          "rgb": "rgb(26, 83, 92)",
          "hsl": "hsl(188, 56%, 23%)",
          "name": "Midnight Blue",
          "description": "Primary text color ensuring excellent readability",
          "psychology": "Professional, stable, reliable, trustworthy, authoritative",
          "usage": ["all body text", "headings", "navigation labels", "form labels", "important information", "professional content"],
          "accessibility": {
            "contrastOnWhite": "14.2:1 (AAA compliant)",
            "contrastOnBeige": "12.1:1 (AAA compliant)"
          }
        }
      },
      "extended": {
        "coralVariations": {
          "light": {
            "hex": "#FF8E8E",
            "usage": ["hover states", "subtle highlights", "disabled buttons"],
            "description": "Lighter coral for interactive states"
          },
          "dark": {
            "hex": "#E55555",
            "usage": ["pressed states", "active buttons", "emphasis"],
            "description": "Darker coral for active states"
          }
        },
        "tealVariations": {
          "light": {
            "hex": "#6ED4CC",
            "usage": ["hover states", "background tints", "subtle accents"],
            "description": "Lighter teal for backgrounds and highlights"
          },
          "dark": {
            "hex": "#3BB5B0",
            "usage": ["pressed states", "active elements", "emphasis"],
            "description": "Darker teal for active states"
          },
          "background": {
            "hex": "#E8F8F7",
            "usage": ["section backgrounds", "subtle differentiation", "tinted areas"],
            "description": "Very light teal for background variations"
          }
        },
        "textVariations": {
          "secondary": {
            "hex": "#2C6B73",
            "usage": ["body text", "descriptions", "secondary information"],
            "description": "Lighter version of midnight blue for hierarchy"
          },
          "tertiary": {
            "hex": "#6C757D",
            "usage": ["metadata", "timestamps", "subtle text"],
            "description": "Light gray for less important text"
          }
        }
      },
      "semantic": {
        "success": {
          "hex": "#00B894",
          "usage": ["success messages", "completed actions", "positive feedback"]
        },
        "warning": {
          "hex": "#FDCB6E",
          "usage": ["warnings", "caution messages", "pending states"]
        },
        "error": {
          "hex": "#E74C3C",
          "usage": ["error messages", "failed actions", "critical alerts"]
        },
        "info": {
          "hex": "#74B9FF",
          "usage": ["informational messages", "tips", "neutral notifications"]
        }
      }
    },
    "usageGuidelines": {
      "buttonColors": {
        "adoptionPrimary": {
          "background": "#FF6B6B",
          "text": "#FFFFFF",
          "usage": ["Adopt Me buttons", "Apply for Adoption", "Contact Shelter"],
          "states": {
            "hover": "#FF8E8E",
            "pressed": "#E55555",
            "disabled": "#FF6B6B with 40% opacity"
          }
        },
        "servicePrimary": {
          "background": "#4ECDC4",
          "text": "#FFFFFF",
          "usage": ["Book Service", "Schedule Appointment", "Find Provider"],
          "states": {
            "hover": "#6ED4CC",
            "pressed": "#3BB5B0",
            "disabled": "#4ECDC4 with 40% opacity"
          }
        },
        "secondary": {
          "background": "transparent",
          "border": "#4ECDC4",
          "text": "#4ECDC4",
          "usage": ["Learn More", "View Details", "Secondary actions"],
          "states": {
            "hover": {
              "background": "#4ECDC4",
              "text": "#FFFFFF"
            }
          }
        }
      },
      "componentColors": {
        "cards": {
          "background": "#FFFFFF",
          "border": "#E8F8F7",
          "shadow": "0 2px 8px rgba(26, 83, 92, 0.08)"
        },
        "navigation": {
          "background": "#FFFFFF",
          "activeItem": "#FF6B6B",
          "inactiveItem": "#6C757D",
          "border": "#E8F8F7"
        },
        "forms": {
          "background": "#FFFFFF",
          "border": "#E8F8F7",
          "focusBorder": "#4ECDC4",
          "errorBorder": "#E74C3C",
          "label": "#1A535C",
          "placeholder": "#6C757D"
        },
        "aiChatbot": {
          "background": "#F7FFF7",
          "userBubble": "#FF6B6B",
          "aiBubble": "#FFFFFF",
          "accent": "#4ECDC4"
        }
      },
      "featureSpecificColors": {
        "adoption": {
          "primaryAction": "#FF6B6B",
          "favoriteIcon": "#FF6B6B",
          "urgentBadge": "#E74C3C",
          "cardBorder": "#FF6B6B"
        },
        "services": {
          "primaryAction": "#4ECDC4",
          "availability": "#00B894",
          "pricing": "#1A535C",
          "categoryIcons": "#4ECDC4"
        },
        "community": {
          "eventHighlight": "#74B9FF",
          "postInteraction": "#FF6B6B",
          "userGenerated": "#4ECDC4"
        },
        "education": {
          "tipHighlight": "#FDCB6E",
          "importantInfo": "#74B9FF",
          "linkColor": "#4ECDC4"
        }
      }
    },
    "cssVariables": {
      "root": {
        "comment": "Primary palette colors",
        "--color-coral": "#FF6B6B",
        "--color-teal": "#4ECDC4",
        "--color-beige": "#F7FFF7",
        "--color-midnight": "#1A535C",
        
        "comment2": "Extended palette",
        "--color-coral-light": "#FF8E8E",
        "--color-coral-dark": "#E55555",
        "--color-teal-light": "#6ED4CC",
        "--color-teal-dark": "#3BB5B0",
        "--color-teal-bg": "#E8F8F7",
        "--color-text-secondary": "#2C6B73",
        "--color-text-tertiary": "#6C757D",
        
        "comment3": "Semantic colors",
        "--color-success": "#00B894",
        "--color-warning": "#FDCB6E",
        "--color-error": "#E74C3C",
        "--color-info": "#74B9FF",
        
        "comment4": "Component-specific",
        "--color-white": "#FFFFFF",
        "--color-border": "#E8F8F7",
        "--color-shadow": "rgba(26, 83, 92, 0.08)"
      }
    },
    "accessibilityCompliance": {
      "wcagLevel": "AA",
      "contrastRatios": {
        "coralOnWhite": "4.8:1",
        "coralOnBeige": "4.2:1",
        "tealOnWhite": "3.2:1",
        "tealOnBeige": "3.8:1",
        "midnightOnWhite": "14.2:1",
        "midnightOnBeige": "12.1:1"
      },
      "colorBlindCompliance": true,
      "notes": "All color combinations exceed WCAG AA standards. Midnight blue provides exceptional readability."
    },
    "implementationNotes": {
      "transitions": {
        "duration": "0.3s",
        "easing": "ease",
        "properties": ["background-color", "border-color", "color", "box-shadow"]
      },
      "gradients": {
        "coralToTeal": "linear-gradient(135deg, #FF6B6B 0%, #4ECDC4 100%)",
        "backgroundSubtle": "linear-gradient(135deg, #F7FFF7 0%, #E8F8F7 100%)"
      },
      "boxShadows": {
        "card": "0 2px 8px rgba(26, 83, 92, 0.08)",
        "cardHover": "0 4px 16px rgba(26, 83, 92, 0.12)",
        "button": "0 2px 4px rgba(26, 83, 92, 0.1)",
        "fab": "0 8px 24px rgba(255, 107, 107, 0.4)"
      },
      "ratios": {
        "description": "60-30-10 rule for color distribution",
        "background": "60% (Warm Beige)",
        "text": "30% (Midnight Blue)",
        "accents": "10% (Coral + Teal)"
      }
    },
    "platformSpecific": {
      "web": {
        "breakpoints": {
          "mobile": "320px - 768px",
          "tablet": "768px - 1024px",
          "desktop": "1024px+"
        },
        "colorAdjustments": "None required - colors work consistently across all screen sizes"
      },
      "mobile": {
        "ios": {
          "statusBar": "light-content for coral headers, dark-content for beige backgrounds"
        },
        "android": {
          "statusBar": "Use coral (#FF6B6B) for status bar color",
          "navigationBar": "Use beige (#F7FFF7) for navigation bar"
        }
      },
      "darkMode": {
        "enabled": true,
        "adaptations": {
          "--color-beige": "#1A1A1A",
          "--color-midnight": "#FFFFFF",
          "--color-coral": "#FF6B6B (unchanged)",
          "--color-teal": "#4ECDC4 (unchanged)",
          "--color-border": "#333333",
          "note": "Coral and teal remain vibrant in dark mode for consistent brand recognition"
        }
      }
    },
    "brandingRules": {
      "consistency": {
        "adoption": "Always use coral (#FF6B6B) for adoption-related actions across all platforms",
        "services": "Always use teal (#4ECDC4) for service-related actions across all platforms",
        "text": "Always use midnight blue (#1A535C) for primary text content",
        "backgrounds": "Always use warm beige (#F7FFF7) for main content backgrounds"
      },
      "doNots": [
        "Do not use coral for service bookings - this confuses user expectations",
        "Do not use bright colors for backgrounds - stick to beige family",
        "Do not use low-contrast combinations for important text",
        "Do not mix other primary colors with this palette",
        "Do not use coral and teal together for text (poor contrast)"
      ]
    }
  },
  "implementationExamples": {
    "css": {
      "buttonStyles": "/* Adoption CTA Button */\n.btn-adopt {\n  background-color: var(--color-coral);\n  color: var(--color-white);\n  border: none;\n  padding: 12px 24px;\n  border-radius: 8px;\n  font-weight: 500;\n  transition: all 0.3s ease;\n}\n\n.btn-adopt:hover {\n  background-color: var(--color-coral-light);\n  transform: translateY(-2px);\n}\n\n/* Service Booking Button */\n.btn-service {\n  background-color: var(--color-teal);\n  color: var(--color-white);\n  border: none;\n  padding: 12px 24px;\n  border-radius: 8px;\n  font-weight: 500;\n  transition: all 0.3s ease;\n}",
      "cardStyles": "/* Pet Card Component */\n.pet-card {\n  background-color: var(--color-white);\n  border: 1px solid var(--color-border);\n  border-left: 4px solid var(--color-coral);\n  border-radius: 12px;\n  padding: 20px;\n  box-shadow: var(--shadow-card);\n  transition: all 0.3s ease;\n}\n\n.pet-card:hover {\n  transform: translateY(-4px);\n  box-shadow: var(--shadow-card-hover);\n  border-left-color: var(--color-coral-dark);\n}"
    },
    "react": {
      "componentExample": "// Pet Card Component with proper color usage\nconst PetCard = ({ pet, onAdopt, onFavorite }) => {\n  return (\n    <div className=\"pet-card\">\n      <h3 style={{ color: 'var(--color-midnight)' }}>{pet.name}</h3>\n      <p style={{ color: 'var(--color-text-secondary)' }}>{pet.description}</p>\n      <div className=\"pet-actions\">\n        <button \n          className=\"btn-adopt\"\n          onClick={onAdopt}\n          style={{ backgroundColor: 'var(--color-coral)' }}\n        >\n          â¤ï¸ Adopt Me\n        </button>\n        <button \n          className=\"btn-service\"\n          onClick={onFavorite}\n          style={{ backgroundColor: 'var(--color-teal)' }}\n        >\n          ğŸ’ Favorite\n        </button>\n      </div>\n    </div>\n  );\n};"
    }
  }
}
